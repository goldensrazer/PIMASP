@model IEnumerable<PIM.Models.Objects.Cliente>

<h2>Consulta de Clientes</h2>
<p>
    <a class="btn btn-success" href="/Cliente/Create"><i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Cadastrar</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="colunaBtn">Ações</th>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <thead>
            <tr>
                <td>
                    <a class="btn btn-info" href="/Cliente/Details/@item.id" title="Detalhes"><i class="fas fa-search"></i></a>
                    <a class="btn btn-primary" href="/Cliente/Edit/@item.id" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                    <a class="btn btn-danger" href="/Cliente/Delete/@item.id" title="Excluir"><i class="fas fa-trash"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nome)
                </td>
            </tr>
        </thead>
    }

</table>
