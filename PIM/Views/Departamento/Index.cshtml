@model IEnumerable<PIM.Models.Departamento>

<h2>Consulta de Departamentos</h2>
<p>
    <a class="btn btn-success" href="/Departamento/Create"><i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Cadastrar</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="colunaBtn">Ações</th>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SetorID)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    <a class="btn btn-info" href="/Departamento/Details/@item.id" title="Detalhes"><i class="fas fa-search"></i></a>
                    <a class="btn btn-primary" href="/Departamento/Edit/@item.id" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                    <a class="btn btn-danger" href="/Departamento/Delete/@item.id" title="Excluir"><i class="fas fa-trash"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Setor.Nome)
                </td>
            </tr>
        </tbody>
    }

</table>
